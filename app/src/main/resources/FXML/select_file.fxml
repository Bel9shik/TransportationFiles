<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:controller="kardash.project.app.core.cotrollers.SelectFileController"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom, #8e44ad, #9b59b6);">

    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">

        <!-- Заголовок -->
        <Text fill="WHITE" text="Выберите файл для отправки" style="-fx-font-weight: bold;">
            <Font name="Arial" size="32"/>
        </Text>

        <!-- Выбранный файл -->
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.15);
              -fx-background-radius: 10; -fx-padding: 20; -fx-pref-width: 500;">
            <Label text="Выбранный файл:" style="-fx-text-fill: #f7f1e3; -fx-font-size: 14;"/>
            <Label fx:id="fileNameLabel" text="Файл не выбран" style="-fx-text-fill: white; -fx-font-size: 16;
                   -fx-font-weight: bold; -fx-padding: 10;"/>
            <Label fx:id="fileSizeLabel" text="Размер: -" style="-fx-text-fill: #dfe4ea; -fx-font-size: 14;"/>
        </VBox>

        <!-- Кнопки выбора -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="browseBtn" onAction="#handleBrowseBtn" text="Выбрать файл" style="-fx-background-radius: 15;
                    -fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 14;
                    -fx-padding: 10 30; -fx-cursor: hand; -fx-border-color: white; -fx-border-radius: 15;
                    -fx-border-width: 2;">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../icons/folder.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="sendBtn" onAction="#handleSendBtn" text="Отправить" disable="true" style="-fx-background-radius: 15;
                    -fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 30;
                    -fx-cursor: hand; -fx-border-color: white; -fx-border-radius: 15; -fx-border-width: 2;">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@../icons/send.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Кнопка назад -->
        <Button fx:id="backToMainMenu" onAction="#handleBackToMainMenu" text="К главному меню" style="-fx-background-radius: 15;
                -fx-background-color: transparent; -fx-text-fill: #f7f1e3; -fx-font-size: 12; -fx-padding: 5 15;
                -fx-cursor: hand; -fx-underline: true;"/>

    </VBox>

</AnchorPane>