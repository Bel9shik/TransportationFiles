<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:controller="kardash.project.app.core.cotrollers.WaitingForRequestController" xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #3498db);">

    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0"
          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">

        <!-- Информационный текст -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Сканирование сети..." style="-fx-text-fill: white; -fx-font-size: 18;"/>
            <Label text="Ожидание входящих запросов на передачу файлов"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14;"/>
            <Label fx:id="statusLabel" text="Статус: Активно"
                   style="-fx-text-fill: #2ecc71; -fx-font-size: 14; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Анимация ожидающей совы -->
        <ImageView fitHeight="120.0" fitWidth="300.0">
            <Image url="@../icons/owl_waiting.gif" />
        </ImageView>

        <!-- Сетевая информация -->
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(0,0,0,0.2);
              -fx-background-radius: 10; -fx-padding: 15;">
            <Label fx:id="ipLabel" text="Ваш IP: some ip"
                   style="-fx-text-fill: #f1c40f; -fx-font-size: 14;"/>
            <Label fx:id="portLabel" text="Порт: port"
                   style="-fx-text-fill: #f1c40f; -fx-font-size: 14;"/>
        </VBox>

        <!-- Кнопка возврата -->
        <Button fx:id="backButton" onAction="#handleBack" text="Назад" style="-fx-background-radius: 15;
                -fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14;
                -fx-padding: 10 30; -fx-cursor: hand; -fx-border-color: #ecf0f1; -fx-border-radius: 15;
                -fx-border-width: 1.5;"/>
    </VBox>

</AnchorPane>