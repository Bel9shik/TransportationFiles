<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:controller="kardash.project.app.core.cotrollers.OutComingRequestController"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: linear-gradient(to bottom, #8e44ad, #9b59b6);">

    <VBox alignment="CENTER" spacing="25" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100"
          AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">

        <!-- Заголовок -->
        <Text fill="WHITE" text="Запрос на сопряжение" style="-fx-font-weight: bold;">
            <Font name="Arial" size="32"/>
        </Text>

        <!-- Иконка ожидания -->
        <ImageView fitWidth="200" fitHeight="150">
            <Image url="@../icons/owl_still_waiting.gif"/>
        </ImageView>

        <!-- Основное сообщение -->
        <Label text="Ожидание ответа от пользователя..." style="-fx-text-fill: #ecf0f1; -fx-font-size: 18;"/>

        <!-- Информация о получателе -->
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(255,255,255,0.15);
              -fx-background-radius: 10; -fx-padding: 15;">
            <Label text="Получатель:" style="-fx-text-fill: #f1c40f; -fx-font-size: 14;"/>
            <Label fx:id="userNameLabel" text="Иван Иванов"
                   style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Дополнительная информация -->
        <Label text="Это может занять некоторое время"
               style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-style: italic;"/>

        <!-- Кнопка отмены -->
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Отменить запрос"
                style="-fx-background-radius: 15; -fx-background-color: rgba(0,0,0,0.25);
                -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 40;
                -fx-cursor: hand; -fx-border-color: white; -fx-border-radius: 15; -fx-border-width: 1.5;"/>

    </VBox>

</AnchorPane>