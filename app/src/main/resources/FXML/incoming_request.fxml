<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #8e44ad, #9b59b6);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">

        <!-- Заголовок -->
        <Text fill="WHITE" style="-fx-font-weight: bold;" text="Входящий запрос">
            <Font name="Arial" size="32" />
        </Text>

        <!-- Иконка уведомления -->
        <ImageView fitHeight="100" fitWidth="100">
            <Image url="@../icons/notification.png" />
        </ImageView>

        <!-- Информация о запросе -->
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.15);               -fx-background-radius: 15; -fx-padding: 20;">
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="30" fitWidth="30">
                    <Image url="@../icons/user.png" />
                </ImageView>
                <Label fx:id="senderLabel" style="-fx-text-fill: white; -fx-font-size: 18;" text="Отправитель: User123" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="30" fitWidth="30">
                    <Image url="@../icons/file.png" />
                </ImageView>
                <Label fx:id="fileLabel" style="-fx-text-fill: white; -fx-font-size: 16;" text="Файл: document.pdf" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
<!--                <ImageView fitWidth="30" fitHeight="30">-->
<!--                    <Image url="@../icons/size_file.png"/>-->
<!--                </ImageView>-->
                <Label fx:id="sizeLabel" style="-fx-text-fill: #dfe4ea; -fx-font-size: 14;" text="Размер: 45.6 MB" />
            </HBox>
        </VBox>

        <!-- Кнопки действий -->
        <HBox alignment="CENTER" spacing="40">
            <Button fx:id="rejectBtn" style="-fx-background-radius: 20;                     -fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white;                     -fx-cursor: hand; -fx-padding: 10 30;" text="Отклонить">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="@../icons/cancel.png" />
                    </ImageView>
                </graphic>
            <textFill>
               <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                  <stops>
                     <Stop>
                        <color>
                           <Color />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="1.0" green="1.0" blue="1.0" />
                        </color>
                     </Stop>
                  </stops>
               </RadialGradient>
            </textFill>
            </Button>

            <Button fx:id="acceptBtn" style="-fx-background-radius: 20;                     -fx-font-size: 16; -fx-background-color: #2ecc71; -fx-text-fill: white;                     -fx-cursor: hand; -fx-padding: 10 30;" text="Принять">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="@../icons/check.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Дополнительная информация -->
        <Label style="-fx-text-fill: #f7f1e3; -fx-font-size: 12; -fx-font-style: italic;" text="Запрос будет автоматически отклонен через: 00:30" />

    </VBox>

</AnchorPane>
