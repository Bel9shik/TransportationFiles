<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:controller="kardash.project.app.core.cotrollers.MainController" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" AnchorPane.topAnchor="100">

        <!-- Заголовок -->
        <Text fill="WHITE" style="-fx-font-weight: bold;" text="File Transfer">
            <Font name="Arial" size="36" />
        </Text>

        <!-- Кнопки действий -->
        <HBox alignment="CENTER" spacing="40">
            <!-- Кнопка приёма -->
            <Button fx:id="receiveBtn" onAction="#receiveFile" style="-fx-background-radius: 20; -fx-font-size: 16; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 15 25;" text="Принять файл" textAlignment="CENTER">
                <graphic>
                    <ImageView fitHeight="40" fitWidth="40" opacity="0.83">
                        <Image url="@../icons/download.png" />
                        <effect>
                            <DropShadow color="#00000080" radius="3" />
                        </effect>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Кнопка отправки -->
            <Button fx:id="sendBtn" onAction="#sendFile" style="-fx-background-radius: 20; -fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 15 25;" text="Отправить файл">
                <graphic>
                    <ImageView fitHeight="40" fitWidth="40">
                        <Image url="@../icons/upload.png" />
                        <effect>
                            <DropShadow color="#00000080" radius="3" />
                        </effect>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Подпись -->
        <Text fill="#ecf0f1" style="-fx-font-style: italic;" text="Выберите действие">
            <Font name="Arial" size="14" />
        </Text>
    </VBox>

</AnchorPane>
