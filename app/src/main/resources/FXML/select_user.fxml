<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:controller="kardash.project.app.core.cotrollers.SelectUserController" xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom, #4a69bd, #6a89cc);">

    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">

        <!-- Заголовок -->
        <Text fill="WHITE" text="Выберите получателя" style="-fx-font-weight: bold;">
            <Font name="Arial" size="32"/>
        </Text>

        <!-- Пояснение -->
        <Label text="Доступные пользователи в локальной сети:" style="-fx-text-fill: #f7f1e3; -fx-font-size: 16;"/>

        <!-- Список пользователей -->
        <ListView fx:id="userListView" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;
                  -fx-border-radius: 10; -fx-pref-width: 500; -fx-pref-height: 300;">
            <!-- Каждый элемент списка будет кастомным -->
        </ListView>

        <!-- Индикатор загрузки -->
        <ProgressIndicator fx:id="loadingIndicator" progress="-1"
                           style="-fx-progress-color: white;"/>

        <!-- Кнопки действий -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="backBtn" onAction="#handleBack" text="Назад" style="-fx-background-radius: 15; -fx-background-color: rgba(0,0,0,0.3);
                    -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 30; -fx-cursor: hand; -fx-border-color: white;
                    -fx-border-radius: 15; -fx-border-width: 2;"/>
            <Button fx:id="continueBtn" onAction="#handleContinue" text="Продолжить" style="-fx-background-radius: 15; -fx-background-color: #27ae60;
                    -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 30; -fx-cursor: hand; -fx-border-color: white;
                    -fx-border-radius: 15; -fx-border-width: 2;" disable="true"/>
        </HBox>

    </VBox>

</AnchorPane>